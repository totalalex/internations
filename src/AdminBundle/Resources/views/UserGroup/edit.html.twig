{% extends 'AdminBundle::admin-layout.html.twig' %}
{% form_theme edit_form 'AdminBundle:Form:form-theme.html.twig' %}

{% block content %}
    <h3>UserGroup edit</h3>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" class="btn btn-warning btn-small"/> <a href="{{ path('usergroup_index') }}" class="btn btn-primary btn-small">Back to the list</a>
    {{ form_end(edit_form) }}



    {{ form_start(delete_form) }}
        <input type="submit" value="Delete" class="btn btn-danger btn-small" {% if userGroup.users|length > 0 %}disabled{% endif %}>
    {% if userGroup.users|length > 0 %}Group has {{ userGroup.users|length }} user(s) and cannot be deleted{% endif %}
    {{ form_end(delete_form) }}

{% endblock %}
